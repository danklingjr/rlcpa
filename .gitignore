 # ignore all files starting with .
\.*

# include .gitignore (i.e. do NOT ignore)
!.gitignore

# ignore bower/node/gulp/composer dependencies
bower_components/
node_modules/
npm-debug.log
vendor/
composer.phar
composer.lock

# ignore wordpress core
wp/

# ignore gulp generated files
wp-content/themes/*/assets/dist/*.css
wp-content/themes/*/assets/dist/*.js

# ignore uploads
wp-content/uploads/
wp-content/uploads/*

# ignore cache
wp-content/cache/
wp-content/cache/*
wp-content/cache/*/*
wp-content/w3tc-config/master.php
wp-content/cache/config/master.php

# ignore server-specific files
.htaccess
wp-config.php
wp-config-sample.php

# ignore IDE files
.idea/
*.sublime-project
*.sublime-workspace

# ignore OS files
.DS_Store
.trashes
.localized
